" color scheme {{{

set background=dark
colorscheme wombat256mod

" }}}


" status bar {{{

" Always have a statusbar.
set laststatus=2

" }}}


" long lines {{{

" Set the maximum line length.
set textwidth=80
" Highlight longer text.
au BufWinEnter * let w:m2=matchadd('ErrorMsg', '\%>80v.\+', -1)

" }}}


" misc {{{

" Improve performance by redrawing the screen lazily.
"set lazyredraw

" }}}


